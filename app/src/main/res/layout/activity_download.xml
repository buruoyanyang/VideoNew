<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.biezhi.videonew.downloadActivity">
    <include layout="@layout/default_title_bar"
        android:id="@+id/title_layout"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_layout"
        android:layout_above="@+id/disk_free_num">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/video_background"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="暂无下载内容"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:id="@+id/download_no"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/download_list"
            android:visibility="visible">
        </ListView>
    </FrameLayout>
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/disk_free_num"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_toRightOf="@+id/disK_label"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="内存使用：  "
        android:layout_alignParentBottom="true"
        android:id="@+id/disK_label"
        android:gravity="center"/>
</RelativeLayout>
