<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d5deec">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/vip"
            android:id="@+id/vip_imageView"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123"
            android:id="@+id/not_show"
            android:layout_toRightOf="@+id/vip_imageView"
            android:visibility="invisible"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="测试"
            android:layout_toRightOf="@+id/not_show"
            android:layout_centerVertical="true"
            android:textSize="15dp"
            android:id="@+id/episode_name"
            android:gravity="center"
            />
        <TextView
            android:layout_width="20dp"
            android:layout_height="1dp"
            android:layout_toRightOf="@+id/episode_name"
            android:id="@+id/not_show1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="第1集"
            android:layout_centerVertical="true"
            android:id="@+id/episode_num"
            android:visibility="visible"
            android:layout_alignParentRight="true"
            android:paddingRight="15dp"/>

    </RelativeLayout>


</RelativeLayout>